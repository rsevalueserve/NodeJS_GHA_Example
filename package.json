{
  "name": "node-express-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "A boilerplate/starter project for quickly building APIs using Node.js, Express.",
  "main": "app.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prebuild": "npm run swagger",
    "build": "tsc",
    "preserve": "npm run build",
    "pre:dev": "npm run swagger",
    "swagger": "tsoa spec",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "dev": "cross-env NODE_ENV=development concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "lint": "npx eslint src",
    "lint:fix": "eslint --fix --ignore-path .gitignore . --ext .ts",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "migration:generate": "npx typeorm-ts-node-esm migration:generate ./migrations/migration -d ./src/data/data-source.ts",
    "migration:run": "npx typeorm-ts-node-esm migration:run -d ./src/data/data-source.ts",
    "migration:revert": "npx typeorm-ts-node-esm migration:revert -d ./src/data/data-source.ts",
    "postinstall-linux": "if [ ! -f .husky/pre-commit ]; then npm install husky --save-dev && chmod +x .husky/*; fi",
    "postinstall-windows": "npm run prepare",
    "postinstall": "npm run postinstall-windows || npm run postinstall-linux"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "postgres",
    "pg",
    "boilerplate"
  ],
  "author": "Your Name <email@example.com>",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@tsconfig/node-lts": "^18.12.5",
    "@types/babel__core": "^7.20.1",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/json-schema": "^7.0.12",
    "@types/node": "^20.7.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "standard": "^17.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "rimraf": "^5.0.1"
  },
  "lint-staged": {
    "*.(ts)": "npm run lint"
  }
}
